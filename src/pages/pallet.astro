<script>
// Enhanced palette switching with global theme sync
function initializePalettePage() {
  // Initialize page with current saved palette state
  initializePaletteState();
  
  // Handle palette buttons
  document.querySelectorAll('.palette-btn').forEach(button => {
    button.addEventListener('click', function(this: HTMLButtonElement) {
      const lightTheme = this.getAttribute('data-light-theme');
      const darkTheme = this.getAttribute('data-dark-theme');
      
      if (!lightTheme || !darkTheme) return;
      
      // Respect current dark/light state when selecting new palette
      const currentIsDarkMode = localStorage.getItem('isDarkMode') === 'true';
      const isDarkMode = currentIsDarkMode;
      
      // Save palette selection
      localStorage.setItem('selectedLightTheme', lightTheme);
      localStorage.setItem('selectedDarkTheme', darkTheme);
      localStorage.setItem('isDarkMode', isDarkMode.toString());
      
      // Apply theme immediately with correct mode
      const newTheme = isDarkMode ? darkTheme : lightTheme;
      document.documentElement.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
      
      // Dispatch palette change event for persistence and main toggle sync
      window.dispatchEvent(new CustomEvent('paletteChanged', {
        detail: { lightTheme, darkTheme, isDarkMode }
      }));
      
      // Update all toggles for this palette set to light mode
      updateToggleStates(lightTheme, darkTheme, isDarkMode);
      
      // Visual feedback
      (this as HTMLButtonElement).classList.add('btn-success');
      setTimeout(() => (this as HTMLButtonElement).classList.remove('btn-success'), 1000);
    });
  });

  // Handle individual theme toggles
  document.querySelectorAll('.theme-toggle').forEach(toggle => {
    const inputToggle = toggle as HTMLInputElement;
    inputToggle.addEventListener('change', function(this: HTMLInputElement) {
      const lightTheme = this.getAttribute('data-light-theme');
      const darkTheme = this.getAttribute('data-dark-theme');
      const isDarkMode = this.checked;
      
      if (!lightTheme || !darkTheme) return;
      
      // Save state
      localStorage.setItem('isDarkMode', isDarkMode.toString());
      localStorage.setItem('selectedLightTheme', lightTheme);
      localStorage.setItem('selectedDarkTheme', darkTheme);
      
      // Apply theme immediately
      const newTheme = isDarkMode ? darkTheme : lightTheme;
      document.documentElement.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
      
      // Dispatch mode toggle event for main toggle sync
      window.dispatchEvent(new CustomEvent('modeToggled', {
        detail: { isDarkMode, lightTheme, darkTheme }
      }));
      
      // Update other toggles of the same palette to match
      document.querySelectorAll(`.theme-toggle[data-light-theme="${lightTheme}"][data-dark-theme="${darkTheme}"]`).forEach(otherToggle => {
        const otherInputToggle = otherToggle as HTMLInputElement;
        if (otherInputToggle !== this) {
          otherInputToggle.checked = isDarkMode;
        }
      });
    });
  });

  // Listen for main toggle changes to update palette toggles
  window.addEventListener('mainToggleChanged', function(event) {
    const customEvent = event as CustomEvent;
    const { isDarkMode, lightTheme, darkTheme } = customEvent.detail;
    
    // Update all toggles for the active palette
    document.querySelectorAll(`.theme-toggle[data-light-theme="${lightTheme}"][data-dark-theme="${darkTheme}"]`).forEach(toggle => {
      const inputToggle = toggle as HTMLInputElement;
      inputToggle.checked = isDarkMode;
    });
  });

  function initializePaletteState() {
    // Get current saved palette state
    const selectedLightTheme = localStorage.getItem('selectedLightTheme');
    const selectedDarkTheme = localStorage.getItem('selectedDarkTheme');
    const isDarkMode = localStorage.getItem('isDarkMode') === 'true';
    
    if (selectedLightTheme && selectedDarkTheme) {
      // Update toggle states to match saved palette
      updateToggleStates(selectedLightTheme, selectedDarkTheme, isDarkMode);
      
      // Highlight the active palette button
      const activeButton = document.querySelector(
        `.palette-btn[data-light-theme="${selectedLightTheme}"][data-dark-theme="${selectedDarkTheme}"]`
      );
      if (activeButton) {
        activeButton.classList.add('btn-active');
        activeButton.textContent = activeButton.textContent?.replace('Apply', 'Active:') || 'Active';
      }
    }
  }
  
  function updateToggleStates(lightTheme: string, darkTheme: string, isDarkMode: boolean) {
    // Update all toggles for this palette
    document.querySelectorAll(`.theme-toggle[data-light-theme="${lightTheme}"][data-dark-theme="${darkTheme}"]`).forEach(toggle => {
      const inputToggle = toggle as HTMLInputElement;
      inputToggle.checked = isDarkMode;
    });
    
    // Reset all palette buttons
    document.querySelectorAll('.palette-btn').forEach(btn => {
      btn.classList.remove('btn-active', 'btn-success');
      btn.textContent = btn.textContent?.replace('Active:', 'Apply') || 'Apply';
    });
    
    // Highlight active palette button
    const activeButton = document.querySelector(
      `.palette-btn[data-light-theme="${lightTheme}"][data-dark-theme="${darkTheme}"]`
    );
    if (activeButton) {
      activeButton.classList.add('btn-active');
      activeButton.textContent = activeButton.textContent?.replace('Apply', 'Active:') || 'Active';
    }
  }
}

// Initialize on DOMContentLoaded
document.addEventListener('DOMContentLoaded', initializePalettePage);

// Re-initialize after page transitions
document.addEventListener('astro:after-swap', initializePalettePage);
</script>

