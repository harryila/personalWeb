<Layout 
  title="Color Palette Tester" 
  description="Test different RH-inspired color palettes for the website"
  image="/images/default-image.jpg"
>
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">RH Color Palette Tester</h1>
      <p class="text-lg opacity-80 mb-6">
        Experiment with different Restoration Hardware-inspired color schemes. 
        Click a palette button to apply it, then use the toggle to switch between light and dark modes.
      </p>
      <div class="alert alert-info">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        <span>This page is for testing purposes only. Choose your favorite palette and we'll implement it as your main theme!</span>
      </div>
    </div>

    <!-- Palette Selection Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      
      <!-- Current RH Sage Palette -->
      <div class="card bg-base-200 shadow-xl">
