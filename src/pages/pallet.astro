<script>
// Palette switching functionality
document.addEventListener('DOMContentLoaded', function() {
  // Handle palette buttons
  document.querySelectorAll('.palette-btn').forEach(button => {
    button.addEventListener('click', function() {
      const lightTheme = this.getAttribute('data-light-theme');
      const darkTheme = this.getAttribute('data-dark-theme');
      
      // Apply light theme by default
      document.documentElement.setAttribute('data-theme', lightTheme);
      
      // Update all toggles for this palette set
      document.querySelectorAll(`.theme-toggle[data-light-theme="${lightTheme}"]`).forEach(toggle => {
        toggle.checked = false; // Start with light mode
      });
      
      // Store current palette info
      localStorage.setItem('currentLightTheme', lightTheme);
      localStorage.setItem('currentDarkTheme', darkTheme);
    });
  });

  // Handle individual theme toggles
  document.querySelectorAll('.theme-toggle').forEach(toggle => {
    toggle.addEventListener('change', function() {
      const lightTheme = this.getAttribute('data-light-theme');
      const darkTheme = this.getAttribute('data-dark-theme');
      
      if (this.checked) {
        // Switch to dark theme
        document.documentElement.setAttribute('data-theme', darkTheme);
      } else {
        // Switch to light theme
        document.documentElement.setAttribute('data-theme', lightTheme);
      }
    });
  });

  // Set initial state based on current theme
  const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
  
  // Update toggles to match current theme
  document.querySelectorAll('.theme-toggle').forEach(toggle => {
    const lightTheme = toggle.getAttribute('data-light-theme');
    const darkTheme = toggle.getAttribute('data-dark-theme');
    
    if (currentTheme === darkTheme) {
      toggle.checked = true;
    } else if (currentTheme === lightTheme) {
      toggle.checked = false;
    }
  });
});
</script>

