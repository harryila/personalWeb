<script>
// Enhanced palette switching with persistence
document.addEventListener('DOMContentLoaded', function() {
  // Initialize page with current saved palette state
  initializePaletteState();
  
  // Handle palette buttons
  document.querySelectorAll('.palette-btn').forEach(button => {
    button.addEventListener('click', function() {
      const lightTheme = this.getAttribute('data-light-theme');
      const darkTheme = this.getAttribute('data-dark-theme');
      
      // Start with light mode when selecting new palette
      const isDarkMode = false;
      
      // Dispatch palette change event for persistence
      window.dispatchEvent(new CustomEvent('paletteChanged', {
        detail: { lightTheme, darkTheme, isDarkMode }
      }));
      
      // Update all toggles for this palette set to light mode
      updateToggleStates(lightTheme, darkTheme, isDarkMode);
      
      // Visual feedback
      this.classList.add('btn-success');
      setTimeout(() => this.classList.remove('btn-success'), 1000);
    });
  });

  // Handle individual theme toggles
  document.querySelectorAll('.theme-toggle').forEach(toggle => {
    toggle.addEventListener('change', function() {
      const lightTheme = this.getAttribute('data-light-theme');
      const darkTheme = this.getAttribute('data-dark-theme');
      const isDarkMode = this.checked;
      
      // Dispatch mode toggle event for persistence
      window.dispatchEvent(new CustomEvent('modeToggled', {
        detail: { isDarkMode }
      }));
      
      // Update other toggles of the same palette to match
      document.querySelectorAll(`.theme-toggle[data-light-theme="${lightTheme}"]`).forEach(otherToggle => {
        if (otherToggle !== this) {
          otherToggle.checked = isDarkMode;
        }
      });
    });
  });

  function initializePaletteState() {
    // Get current saved palette state
    const selectedLightTheme = localStorage.getItem('selectedLightTheme');
    const selectedDarkTheme = localStorage.getItem('selectedDarkTheme');
    const isDarkMode = localStorage.getItem('isDarkMode') === 'true';
    
    if (selectedLightTheme && selectedDarkTheme) {
      // Update toggle states to match saved palette
      updateToggleStates(selectedLightTheme, selectedDarkTheme, isDarkMode);
      
      // Highlight the active palette button
      const activeButton = document.querySelector(
        `.palette-btn[data-light-theme="${selectedLightTheme}"][data-dark-theme="${selectedDarkTheme}"]`
      );
      if (activeButton) {
        activeButton.classList.add('btn-active');
        activeButton.textContent = activeButton.textContent.replace('Apply', 'Active:');
      }
    }
  }
  
  function updateToggleStates(lightTheme, darkTheme, isDarkMode) {
    // Update all toggles for this palette
    document.querySelectorAll(`.theme-toggle[data-light-theme="${lightTheme}"]`).forEach(toggle => {
      if (toggle.getAttribute('data-dark-theme') === darkTheme) {
        toggle.checked = isDarkMode;
      }
    });
    
    // Reset all palette buttons
    document.querySelectorAll('.palette-btn').forEach(btn => {
      btn.classList.remove('btn-active', 'btn-success');
      btn.textContent = btn.textContent.replace('Active:', 'Apply');
    });
    
    // Highlight active palette button
    const activeButton = document.querySelector(
      `.palette-btn[data-light-theme="${lightTheme}"][data-dark-theme="${darkTheme}"]`
    );
    if (activeButton) {
      activeButton.classList.add('btn-active');
      activeButton.textContent = activeButton.textContent.replace('Apply', 'Active:');
    }
  }
});
</script>

