<Layout 
  title="Color Palette Tester" 
  description="Test different RH-inspired color palettes for the website"
  image="/images/default-image.jpg"
>
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">RH Color Palette Tester</h1>
      <p class="text-lg opacity-80 mb-6">
        Experiment with different Restoration Hardware-inspired color schemes. 
        Click a palette button to apply it, then use the toggle to switch between light and dark modes.
      </p>
      <div class="alert alert-info">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        <span>Your selected palette will persist across pages and after refreshing! Choose your favorite combination.</span>
      </div>
    </div>

    <!-- Palette Selection Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      
      <!-- Current RH Sage Palette -->
      <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
          <h3 class="card-title text-lg">Current RH Sage</h3>
          <p class="text-sm opacity-70 mb-4">Your current palette with sage green, warm earth tones</p>
          
          <!-- Color Preview -->
          <div class="flex gap-2 mb-4">
            <div class="w-8 h-8 rounded-full" style="background-color: #8FA68F" title="Sage Green Primary"></div>
            <div class="w-8 h-8 rounded-full" style="background-color: #A0855B" title="Warm Tan Secondary"></div>
            <div class="w-8 h-8 rounded-full" style="background-color: #9BA5B0" title="Blue-Gray Accent"></div>
            <div class="w-8 h-8 rounded-full" style="background-color: #FAF9F6" title="Warm White" class="border border-base-300"></div>
          </div>
          
          <div class="card-actions flex-col gap-2">
            <button class="btn btn-primary w-full palette-btn" data-light-theme="light" data-dark-theme="dark">
              Apply Current Palette
            </button>
            
            <!-- Light/Dark Toggle -->
            <div class="flex items-center justify-between w-full">
              <span class="text-sm">Light</span>
              <label class="swap swap-rotate">
