---
import {template} from  '../../settings.ts'
---

<label class="grid cursor-pointer place-items-center" transition:persist>
  <input
    type="checkbox"
    value={template.darkTheme}
    class="toggle theme-controller bg-base-content col-span-2 col-start-1 row-start-1 main-theme-toggle"
    data-choose-theme
/>
  <svg
    class="stroke-base-100 fill-base-100 col-start-1 row-start-1"
    xmlns="http://www.w3.org/2000/svg"
    width="14"
    height="14"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round">
    <circle cx="12" cy="12" r="5" />
    <path
      d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4" />
  </svg>
  <svg
    class="stroke-base-100 fill-base-100 col-start-2 row-start-1"
    xmlns="http://www.w3.org/2000/svg"
    width="14"
    height="14"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round">
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
  </svg>
</label>

<script>
  // Enhanced main theme toggle to work with palette persistence
  document.addEventListener('DOMContentLoaded', function() {
    const mainToggle = document.querySelector('.main-theme-toggle');
    
    if (mainToggle) {
      // Initialize main toggle state
      initializeMainToggle();
      
      // Handle main toggle changes
      mainToggle.addEventListener('change', function() {
        const isDarkMode = this.checked;
        
        // Check if user has a selected palette
        const selectedLightTheme = localStorage.getItem('selectedLightTheme');
        const selectedDarkTheme = localStorage.getItem('selectedDarkTheme');
        
        if (selectedLightTheme && selectedDarkTheme) {
          // Use selected palette
          window.dispatchEvent(new CustomEvent('modeToggled', {
            detail: { isDarkMode }
          }));
        } else {
          // Use default themes
          const newTheme = isDarkMode ? 'dark' : 'light';
          document.documentElement.setAttribute('data-theme', newTheme);
          localStorage.setItem('theme', newTheme);
        }
      });
      
      // Listen for palette changes to update main toggle
      window.addEventListener('paletteChanged', function(event) {
        const { isDarkMode } = event.detail;
        mainToggle.checked = isDarkMode;
      });
      
      window.addEventListener('modeToggled', function(event) {
        const { isDarkMode } = event.detail;
        mainToggle.checked = isDarkMode;
      });
    }
    
    function initializeMainToggle() {
      // Set main toggle based on current state
      const selectedLightTheme = localStorage.getItem('selectedLightTheme');
      const selectedDarkTheme = localStorage.getItem('selectedDarkTheme');
      const isDarkMode = localStorage.getItem('isDarkMode') === 'true';
      const currentTheme = document.documentElement.getAttribute('data-theme');
      
      if (selectedLightTheme && selectedDarkTheme) {
        // Use palette preference
        mainToggle.checked = isDarkMode;
      } else {
        // Use theme name to determine state
        mainToggle.checked = currentTheme === 'dark';
      }
    }
  });
  
  // Re-initialize after page transitions
  document.addEventListener('astro:after-swap', function() {
    const mainToggle = document.querySelector('.main-theme-toggle');
    if (mainToggle) {
      const selectedLightTheme = localStorage.getItem('selectedLightTheme');
      const selectedDarkTheme = localStorage.getItem('selectedDarkTheme');
      const isDarkMode = localStorage.getItem('isDarkMode') === 'true';
      const currentTheme = document.documentElement.getAttribute('data-theme');
      
      if (selectedLightTheme && selectedDarkTheme) {
        mainToggle.checked = isDarkMode;
      } else {
        mainToggle.checked = currentTheme === 'dark';
      }
    }
  });
</script>
